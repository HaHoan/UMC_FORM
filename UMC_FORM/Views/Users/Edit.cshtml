@model UMC_FORM.Models.Form_User
@using UMC_FORM.Models
@using UMC_FORM.Business

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Custom2.cshtml";
}

<h2>Edit</h2>

<div id="layoutSidenav_content">
    <div class="container-fluid ">
        <div class="">
            <div class="">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="err">@ViewBag.message</label>
                        </div>

                        <div class="form-group">
                            <label for="code">Code</label>
                            <input class="form-control" id="CODE" name="CODE" value="@Model.CODE">
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input class="form-control" id="NAME" name="NAME" value="@Model.NAME">
                        </div>
                        <div class="form-group">
                            <label for="name">Short Name</label>
                            <input class="form-control" id="SHORT_NAME" name="SHORT_NAME" value="@Model.SHORT_NAME">
                        </div>
                        <div class="form-group">
                            <label for="name">Dept</label>
                            <select class="form-control" aria-label="Default select example" name="DEPT">
                                @foreach (var item in ViewBag.depts)
                                {
                                    if (item == Model.DEPT)
                                    {
                                        <option value="@item" selected>@item</option>
                                    }
                                    else
                                    {
                                        <option value="@item">@item</option>
                                    }
                                }
                            </select>
                        </div>
                        <label>Chọn chức vụ</label>
                        <select class="form-control" name="POSITION">
                            @{
                                if (Model.POSITION == 0)
                                {
                                    <option value="0" selected>Staff</option>
                                }
                                else
                                {
                                    <option value="0">Read Only</option>
                                }
                                if (Model.POSITION == POSITION.MANAGER)
                                {
                                    <option value="@POSITION.MANAGER" selected>MNG</option>
                                }
                                else
                                {
                                    <option value="@POSITION.MANAGER">MNG</option>
                                }
                                if (Model.POSITION == POSITION.FM)
                                {
                                    <option value="@POSITION.FM" selected>FM</option>
                                }
                                else
                                {
                                    <option value="@POSITION.FM">FM</option>
                                }
                                if (Model.POSITION == POSITION.GD)
                                {
                                    <option value="@POSITION.GD" selected>GD</option>
                                }
                                else
                                {
                                    <option value="@POSITION.GD">GD</option>
                                }
                                if (Model.POSITION == POSITION.SALARY_GROUP)
                                {
                                    <option value="@POSITION.SALARY_GROUP" selected> SALARY GROUP </option>
                                }
                                else
                                {
                                    <option value="@POSITION.SALARY_GROUP"> NHÓM TÍNH LƯƠNG </option>
                                }
                                if (Model.POSITION == POSITION.SHIFT_MANAGER)
                                {
                                    <option value="@POSITION.SHIFT_MANAGER" selected> QUẢN LÝ CA</option>
                                }
                                else
                                {
                                    <option value="@POSITION.SHIFT_MANAGER"> QUẢN LÝ CA</option>
                                }

                            }


                        </select>

                        <div class="form-group mt-2">
                            <label for="name">Sign</label>
                            <input name="SIGNATURE" class="form-control" id="sign" value="@Model.SIGNATURE">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" name="EMAIL" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="@Model.EMAIL">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" name="PASSWORD" class="form-control" id="exampleInputPassword1" value="@Model.PASSWORD">
                        </div>
                        <div class="form-group">
                            <label for="name">Role</label>
                            <select class="form-control" aria-label="Default select example" name="ROLE_ID">
                                @foreach (Form_Role item in ViewBag.roles)
                                {
                                    if (item.ID == Model.ROLE_ID)
                                    {
                                        <option value="@item.ID" selected>@item.NAME</option>
                                    }
                                    else
                                    {
                                        <option value="@item.ID">@item.NAME</option>
                                    }
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

