@{
    ViewBag.Title = "Create Dept";
    Layout = "~/Views/Shared/_Layout_Custom2.cshtml";
}

<div id="layoutSidenav_content">
    <div class="container-fluid ">
        <div class="">
            <div class="">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="err">@ViewBag.message</label>
                        </div>
                        <div class="form-group">
                            <label for="name">Dept</label>
                            <input class="form-control" id="DEPT" name="DEPT" placeholder="Enter Dept">
                        </div>
                        <div class="form-group">
                            <label for="CODE_MNG">Code Manager</label>
                            <input name="CODE_MNG" class="form-control" id="CODE_MNG" placeholder="Enter Code Manager">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

