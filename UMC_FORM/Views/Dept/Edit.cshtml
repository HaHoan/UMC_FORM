@model UMC_FORM.Models.Form_Dept
@using UMC_FORM.Models
@{
    ViewBag.Title = "Edit Dept";
    Layout = "~/Views/Shared/_Layout_Custom2.cshtml";
}

<h2>Edit</h2>

<div id="layoutSidenav_content">
    <div class="container-fluid ">
        <div class="">
            <div class="">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="err">@ViewBag.message</label>
                        </div>

                        <div class="form-group">
                            <label for="code">Code</label>
                            <input class="form-control" id="DEPT" name="DEPT" value="@Model.DEPT" readonly>
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input class="form-control" id="CODE_MNG" name="CODE_MNG" value="@Model.CODE_MNG">
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-info" href="@Url.Action("Index")" role="button">Back</a>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/bootstrap.bundle.min.js"></script>
<script src="~/Content/js/moment.js"></script>
<script src="~/Content/js/jquery.simplePagination.js"></script>
<script src="~/Content/js/pagination.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>
<script src="~/Content/assets/demo/datatables-demo.js"></script>
<script src="~/Content/js/bootstrap-typeahead.js"></script>
<script src="~/Content/js/mention.js"></script>
<script src="~/Content/js/scripts.js"></script>
<script src="~/Content/js/lang.js"></script>