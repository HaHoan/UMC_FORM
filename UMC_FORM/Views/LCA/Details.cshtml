                                {
                                    @Html.TextBoxFor(m => m.TICKET.LCA_ID, new { id = "LCA_ID", @Name = "LCA_ID", @class = "form-control " + ((Model.SUBMITS.Contains(SUBMIT.EDIT_QUOTE) && Model.SUBMITS.Contains(SUBMIT.APPROVE)) ? "requiredValue" : "") })
                                }
                                else
                                {
                                    <span class="font-weight-bold">
                                        @Html.DisplayFor(m => m.TICKET.LCA_ID)
