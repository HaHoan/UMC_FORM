                                                        var i = 1;
                                                        var required = (Model.SUBMITS.Contains(SUBMIT.EDIT_QUOTE) && Model.SUBMITS.Contains(SUBMIT.APPROVE)) ? "requiredValue" : "";

                                                        foreach (var quote in Model.TICKET.LCA_QUOTEs)
