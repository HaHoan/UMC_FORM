                                            $(function () {
                                                var target = $('#TICKET_REQUEST_TARGET').val()
                                                var arrTarget = target.split(',')
                                                for (var i = 1; i <= 6; i++) {
                                                    var select = $('#select_target_' + i).attr('name')
                                                    if (arrTarget.includes(select)) {
                                                        $('#select_target_' + i).removeClass('d-none')
                                                    } else {
                                                        $('#select_target_' + i).addClass('d-none')
                                                    }
                                                }
                                            })

                                        </script>
                                    </tr>
