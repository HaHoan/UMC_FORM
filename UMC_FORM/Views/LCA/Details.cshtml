                                @Html.Partial("~/Views/LCA/_TicketEdit.cshtml", Model.TICKET)
                            }
                            else
                            {
                                @Html.Partial("~/Views/LCA/_TicketView.cshtml", Model.TICKET)
                            }

                            <hr>

                            @{

                                if (Model.PERMISSION.Contains(PERMISSION.EDIT_INFO))
